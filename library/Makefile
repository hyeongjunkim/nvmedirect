CC := gcc

CFLAGS := -Wall -fPIC 
LDFLAGS := -pthread -shared

SHARED_LIB = libnvmed.so
SHARED_OBJS = lib_nvmed.o utils/radix-tree.o 

INSTALL_HEADERS = ../include/lib_nvmed.h ../include/radix-tree.h

default: $(SHARED_LIB)

$(SHARED_LIB): $(SHARED_OBJS)
	$(CC) $(CFLAGS) $(SHARED_OBJS) -o $(SHARED_LIB) $(LDFLAGS)

install: $(SHARED_LIB)
	install -m 644 -o root -g root $(INSTALL_HEADERS) /lib64
	install -m 644 -o root -g root $(SHARED_LIB) /lib64
	ldconfig 

clean:
	rm -f $(ALL_PROGS) $(SHARED_LIB) *.o

clobber: clean

.PHONY: default clean clobber
